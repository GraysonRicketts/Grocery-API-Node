{
  "name": "grocery-app",
  "version": "1.0.0",
  "description": "Grocery application",
  "repository": {
    "type": "git",
    "url": "https://github.com/GraysonRicketts/Grocery-App.git"
  },
  "main": "index.js",
  "scripts": {
    "test": "mocha --inspect-brk=6767 --nolazy bin/test",
    "start": "nodemon --watch server --watch bin/dev --watch package.json --inspect=5858 bin/dev",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir dist && babel server -s -d dist",
    "production": "npm run build && node bin/production",
    "test-in-docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "chai-http": "^3.0.0",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "connect-redis": "^3.3.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-session": "^1.15.5",
    "mongoose": "^4.11.4",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "redis": "^2.8.0"
  }
}
